<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.TJApp.handchina.Activity.MainActivity" >

    
    <RadioGroup
        android:id="@+id/radioGroup"
      	android:background="@color/Navigation_org_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/navigation_item"
            android:drawableTop="@drawable/n_home_32"
            android:gravity="center"
            android:text="@string/fragment_home"
            android:textColor="@color/Navigation_text_white" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:button="@null"
             android:background="@drawable/navigation_item"
            android:drawableTop="@drawable/n_activity_32"
            android:gravity="center"
            android:text="@string/fragment_activity"
            android:textColor="@color/Navigation_text_white" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:button="@null"
            android:background="@drawable/navigation_item"
            android:drawableTop="@drawable/n_man_32"
            android:text="@string/fragment_personal"
            android:gravity="center"
            android:textColor="@color/Navigation_text_white" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </FrameLayout>

</RelativeLayout>